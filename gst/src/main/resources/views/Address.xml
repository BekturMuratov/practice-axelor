<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <selection name="address.type.selection">
    <option value="default">Default</option>
    <option value="invoice">Invoice</option>
    <option value="shipping">Shipping</option>
    <option value="others">Others</option>
  </selection>

  <form name="address-form" title="Address" model="com.axelor.apps.gst.model.IAddress"
    width="large">
    <panel name="overviewPanel" title="Overview">
      <field name="type" colSpan="12"/>
      <field name="line1" colSpan="6"/>
      <field name="city" colSpan="6" onChange="action-attrs-set-country-on-change-state"/>
      <field name="country" colSpan="6"/>
    </panel>
  </form>

  <grid name="address-grid" title="Addresses" model="com.axelor.apps.gst.model.IAddress">
    <field name="type"/>
    <field name="line1"/>
    <field name="line2"/>
    <field name="city"/>
    <field name="state"/>
    <field name="country"/>
    <field name="pinCode"/>
  </grid>

  <action-attrs name="action-attrs-set-country-on-change-state">
    <attribute for="domain" name="state"
      expr="eval: &quot;self.id=$(__this__.city.state.id)&quot;"/>
  </action-attrs>
</object-views>
