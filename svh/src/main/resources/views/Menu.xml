<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

    <menuitem name="menu-svh-app" title="SVH" icon="fa fa-home" icon-background="black"/>                               <!--Главное меню СВХ -->

    <menuitem name="registration-list" title="Registration"
              parent="menu-svh-app" action="action-registration-list"/>                                                 <!--Страница регистрации товаров -->
    <action-view name="action-registration-list" title="Registration"
                 model="com.axelor.apps.svh.db.Registration">
        <view type="grid" name="registration-grid"/>
        <view type="form" name="registration-form"/>
    </action-view>

    <menuitem name="setting-list" parent="menu-svh-app" title="Settings"/>

    <menuitem name="tariffs-list" title="Tariffs"
              parent="setting-list" action="action-tariff-list"/>                                                       <!--Страница список тарифов -->
    <action-view name="action-tariff-list" title="Tariffs"
                 model="com.axelor.apps.svh.db.Tariff">
        <view type="grid" name="tariff-grid"/>
        <view type="form" name="tariff-form"/>
    </action-view>

    <menuitem name="tariff-rules-list" title="Tariff Rules"
              parent="setting-list" action="action-tariff-rules-list"/>                                                 <!--Страница список правила подсчета тарифов -->
    <action-view name="action-tariff-rules-list" title="Tariff Rules"
                 model="com.axelor.apps.svh.db.TariffRule">
        <view type="grid" name="tariff-rules-grid"/>
        <view type="form" name="tariff-rules-form"/>
    </action-view>

    <menuitem name="report-list" title="Reports"
              parent="setting-list" action="svh.revenue.chart.action-view"/>                                            <!--Страница графика -->
    <action-view name="svh.revenue.chart.action-view" title="Reports"
                 model="com.axelor.apps.svh.db.Registration">
        <view type="form" name="report-revenue-list"/>
    </action-view>
</object-views>