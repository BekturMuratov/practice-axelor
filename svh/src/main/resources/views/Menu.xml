<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">
                                                                                                                        <!--Главное меню СВХ -->
  <menuitem name="menu-svh-app"
            title="SVH"
            icon="fa fa-home"
            icon-background="black"/>
                                                                                                                        <!--Страница регистрации товаров -->
    <menuitem name="registration-list"
            parent="menu-svh-app"
            title="Registration" order="100"
    action="action-registration-list"/>

    <menuitem name="setting-list"
              parent="menu-svh-app"
              title="Settings"
              order="100" />
  <menuitem
          name="tariffs-list"
          parent="setting-list"
          title="Tariffs"
          order="100"
          action="action-tariff-list"/>                                                                                 <!--Страница список тарифов -->

    <menuitem
          name="tariff-rules-list"
          parent="setting-list"
          title="Tariff Rules"
          order="100"
          action="action-tariff-rules-list"/>                                                                            <!--Страница список правила подсчета тарифов -->

    <menuitem
            name="report-list"
            parent="setting-list"
            title="Reports"
            order="100"
            action="svh.revenue.chart.action-view"/>                                                                    <!--Страница графика -->

                                                                                                                         <!-- Action Регистрации  -->
    <action-view name="action-registration-list" title="Registration"
       model="com.axelor.apps.svh.db.Registration">
       <view type="grid" name="registration-grid"/>
       <view type="form" name="registration-form"/>
     </action-view>                                                                                                     <!-- Action Тарифов  -->

     <action-view name="action-tariff-list" title="Tariffs"
        model="com.axelor.apps.svh.db.Tariff">
        <view type="grid" name="tariff-grid"/>
        <view type="form" name="tariff-form"/>
     </action-view>
                                                                                                                        <!-- Action Правила Тарифов  -->
     <action-view name="action-tariff-rules-list" title="Tariff Rules"
       model="com.axelor.apps.svh.db.TariffRule">
        <view type="grid" name="tariff-rules-grid"/>
        <view type="form" name="tariff-rules-form"/>
     </action-view>


    <action-view name="svh.revenue.chart.action-view" title="Reports"
                 model="com.axelor.apps.svh.db.Registration">                                                            <!--Action Графиков-->
        <view type="form" name="report-revenue-list"/>
    </action-view>

</object-views>