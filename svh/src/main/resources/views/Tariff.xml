<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

    <grid title="Tariff" name="tariff-grid" model="com.axelor.apps.svh.db.Tariff">
        <field name="name"/>
        <field name="startDateTime"/>
        <field name="endDateTime"/>
        <field name="price_per_day"/>
        <field name="min_weight"/>
        <field name="max_weight"/>
    </grid>

    <form title="Tariff" name="tariff-form" model="com.axelor.apps.svh.db.Tariff">
        <panel title="General">
            <field name="name"
                   selection="svh.registration.transport_types_selections"
                   required="true"/>
        </panel>

        <panel title="Days range">
            <field name="startDateTime" required="true"/>
            <field name="endDateTime" required="true"/>
        </panel>

        <panel title="Pricing">
            <field name="price_per_day" required="true"/>
            <field name="min_weight"/>
            <field name="max_weight"/>
        </panel>
    </form>
</object-views>