<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">
  <grid title="Vehicles" name="vehicles-grid" model="com.axelor.apps.eq.db.Vehicles">
    <field name="driver_name" title="Driver Name"/>
    <field name="plate_number" title="Plate Number"/>
    <field name="trailer_number" title="Trailer Number"/>
    <field name="cargo_type" title="Cargo Type" widget="singleWidget"/>
    <field name="priority" title="Priority" widget="singleWidget"/>
    <field name="created_at" title="Created At"/>
  </grid>

  <form title="VehiclesForm" name="vehicles-form" model="com.axelor.apps.eq.db.Vehicles"
    width="large">
    <panel name="overviewPanel" title="Vehicle Information">
      <field name="driver_name" title="Driver Name" colSpan="2"/>
      <field name="plate_number" title="Plate Number" colSpan="2"/>
      <field name="trailer_number" title="Trailer Number" colSpan="2"/>
      <field name="cargo_type" title="Cargo Type" colSpan="3" widget="single_select"/>
      <field name="priority" title="Priority" colSpan="3" widget="single_select"/>
      <field name="created_at" title="CreatedAt"/>
    </panel>
  </form>
</object-views>